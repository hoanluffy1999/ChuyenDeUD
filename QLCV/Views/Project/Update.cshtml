@model  QLCV.Models.Project

<div id="frmUpdate" class="form-horizontal">
    <input type="hidden" value="@Model.Id" id="hdId" />
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3" required>Tên dự án </label>
            <div class="col-sm-8">
                <input type="text" value="@Model.Name" required class="form-control" id="txtName" placeholder="Tên dự án">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Mô tả</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.Descriptions" id="txtDescription" placeholder="Mô tả">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3" required>Ngày bắt đầu </label>
            <div class="col-sm-8">
                <input type="date" required class="form-control" value="@Model.StartDate" id="txtDate">
            </div>
        </div>
    </div>

</div>
<script>
    var frmUpdate = $('#frmUpdate');
    $(document).ready(function () {
        addRequired(frmUpdate);
        setStatus();
    });
    $(document).on('keydown', 'input[pattern]', function (e) {
        var input = $(this);
        var oldVal = input.val();
        var regex = new RegExp(input.attr('pattern'), 'g');

        setTimeout(function () {
            var newVal = input.val();
            if (!regex.test(newVal)) {
                input.val(oldVal);
            }
        }, 0);
    });
    $('#modal-form').find('#btnSave').off("click").on('click', function (e) {
        e.preventDefault();
        update();
    });
    function setStatus() {
        if (frmUpdate.find('#ckbStatus').val() == 1) {
            frmUpdate.find('#ckbStatus').prop('checked', true);
        }
    }
    function update() {
        if (ValidateForm(frmUpdate)) {
            return;
        }
        showLoading();
        $.ajax({
            url: urlDomain + "/update",
            method: "POST",
            data: {
                Id: frmUpdate.find('#hdId').val(),
                Name: frmUpdate.find('#txtName').val(),
                Descriptions: frmUpdate.find('#txtDescription').val(),
                StartDate: frmUpdate.find('#txtDate').val()
            }
            , success: function (response) {
                hideLoading()
                if (response.result) {
                    // datasource = response.data
                    showAlert(response.message, 2)
                    getData("",-1);
                    hideContentModal()

                } else {
                    showAlert(response.message)
                }
            }
        })
    }
    function getData(name,status) {
        showLoading()
        $.ajax({
            url: urlDomain + "/getlist",
            method: "GET",
            data: {
                title: frmFilter.find('#txtName').val(),
                take: take,
                skip: skip
            }
            , success: function (response) {
                $('#dtTable').html(response);
                hideLoading()
            }
        });
    }
</script>